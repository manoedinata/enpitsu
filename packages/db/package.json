{
  "name": "@enpitsu/db",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema/_main.d.ts",
      "default": "./src/schema/_main.ts"
    },
    "./schema-grouped": {
      "types": "./dist/schema/_main-grouped.d.ts",
      "default": "./src/schema/_main-grouped.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "push": "pnpm with-env drizzle-kit push  --config src/config.ts",
    "generate": "pnpm with-env drizzle-kit generate  --config src/config.ts",
    "studio": "pnpm with-env drizzle-kit studio  --config src/config.ts",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "drizzle-orm": "^0.39.1",
    "pg": "^8.11.3",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@enpitsu/eslint-config": "workspace:^0.2.0",
    "@enpitsu/prettier-config": "workspace:^0.1.0",
    "@enpitsu/token-generator": "workspace:^0.1.0",
    "@enpitsu/tsconfig": "workspace:^0.1.0",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.30.4",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@enpitsu/eslint-config/base"
    ]
  },
  "prettier": "@enpitsu/prettier-config",
  "type": "module"
}
